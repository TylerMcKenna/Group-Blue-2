<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<!--
Fxml view for the professor page.

Made by Holt.
-->
<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@Label.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.login.ProfessorController">
    <children>
        <TableView fx:id="courseTable" layoutY="25.0" onMouseClicked="#coursePressed" prefHeight="200.0" prefWidth="294.0">
            <columns>
                <TableColumn fx:id="courseName" prefWidth="150.0" text="Course Name" />
                <TableColumn fx:id="CRN" minWidth="0.0" prefWidth="142.0" text="CRN" />
            </columns>
        </TableView>
        <TableView fx:id="studentTable" layoutX="296.0" layoutY="25.0" prefHeight="200.0" prefWidth="304.0">
            <columns>
                <TableColumn fx:id="userName" prefWidth="147.0" text="Student Name" />
                <TableColumn fx:id="email" prefWidth="156.0" text="Student Email" />
            </columns>
        </TableView>
      <Button layoutX="14.0" layoutY="235.0" mnemonicParsing="false" onAction="#addClass" text="Add Class" />
      <Button layoutX="14.0" layoutY="270.0" mnemonicParsing="false" onAction="#deleteClass" text="Delete Class" />
      <TextField fx:id="CRNTextField" layoutX="117.0" layoutY="235.0" prefHeight="27.0" prefWidth="165.0" promptText="CRN" />
      <Label fx:id="lblHello" layoutX="311.0" layoutY="320.0" prefHeight="39.0" prefWidth="266.0" text="Hello, ">
         <font>
            <Font size="27.0" />
         </font></Label>
      <Button layoutX="300.0" layoutY="235.0" mnemonicParsing="false" onAction="#addStudent" text="Add Student" />
      <Button layoutX="300.0" layoutY="270.0" mnemonicParsing="false" onAction="#deleteStudent" text="Delete Student" />
      <TextField fx:id="BNUMTextField" layoutX="410.0" layoutY="234.0" prefHeight="27.0" prefWidth="176.0" promptText="B#" />
      <Label fx:id="lblCRNAlert" layoutX="147.0" layoutY="262.0" text="Please enter a valid CRN!" visible="false">
         <font>
            <Font size="11.0" />
         </font>
      </Label>
      <Button fx:id="UpdateButton" layoutX="14.0" layoutY="304.0" mnemonicParsing="false" onMouseClicked="#updateClicked" text="Update Class" />
      <TextField fx:id="CourseNameReplace" layoutX="116.0" layoutY="304.0" prefHeight="27.0" prefWidth="165.0" promptText="Course Name" />
      <TextField fx:id="CourseNumReplace" layoutX="116.0" layoutY="340.0" prefHeight="27.0" prefWidth="165.0" promptText="CRN" />
      <Label fx:id="lblSelectCourse" layoutX="152.0" layoutY="370.0" prefHeight="16.0" prefWidth="127.0" text="Please select a course!" visible="false">
         <font>
            <Font size="11.0" />
         </font>
      </Label>
      <Button layoutX="534.0" layoutY="366.0" mnemonicParsing="false" onAction="#logOut" text="Log Out" />
      <Label fx:id="lblBNumAlert" layoutX="421.0" layoutY="272.0" prefHeight="16.0" prefWidth="148.0" text="Please enter a valid bNumber!" visible="false">
         <font>
            <Font size="11.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
